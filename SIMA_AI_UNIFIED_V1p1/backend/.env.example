# Backend Environment Variables

# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=production

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/sima_ai
REDIS_URL=redis://localhost:6379

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/tmp/uploads

# AI/ML Services
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
CLOUD_RELAY_URL=http://vllm:8000/v1/chat/completions

# MQTT (Optional)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TLS_CERT=
MQTT_TLS_KEY=

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# External APIs
WEATHER_API_KEY=
MAPS_API_KEY=